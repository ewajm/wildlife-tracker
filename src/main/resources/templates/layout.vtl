<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Wildlife Tracker</title>
    <link href="https://fonts.googleapis.com/css?family=Acme" rel="stylesheet">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' type="text/css" href="/app.css">
  </head>
  <body>
    <div class="container">

      <div class="jumbotron">
        <h1>Wildlife Tracker</h1>
        #if($rangerName)
          <div class="link-bar">
            <div><p><a href="/">Home</a></p></div>
            <div><p><a href="/sightings">All Sightings</a></p></div>
            <div><p><a href="/sightings/new">Add Sighting</p></a></div>
            <div><p><a href="/animals">All Animals</a></p></div>
            <div><p><a href="/animals/new">Add Animals</a></p></div>
            <div><p><a href="/logout">Log out</a></p></div>
          </div>
          #end
      </div>
      #if($message)
      <div class="message-display">
        <h4>$message</h4>
      </div>
      #end
      #parse( $template )

    </div>
  </body>
</html>
